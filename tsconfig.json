{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
    "plugins": [
      { "transform": "ts-transform-paths" }
    ],
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"]
      }
    }
  }